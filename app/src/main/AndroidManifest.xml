<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.reinaldo.pokemon">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".linha"
                android:label="@string/title_activity_linha"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".DetalheContato"
                android:label="@string/title_activity_detalhe_contato"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".DetalhePokemon"
                android:label="@string/title_activity_detalhe_pokemon"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>